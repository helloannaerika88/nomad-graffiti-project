<h1>EDIT THIS GRAFFITI</h1>

<form action="/graffiti/{{graffiti._id}}/edit" method="POST">
    <label for="photographer">Photographer:* </label>
    <input type="text" name="photographer" value="{{graffiti.photographer}}">
    <br>
    <label for="title">Title:* </label>
    <input type="text" name="title" value="{{graffiti.title}}">
    <br>
    <label for="description">Description:* </label>
    <textarea name="description" id="description" cols="30" rows="10" placeholder="{{graffiti.description}}"></textarea>
    <br>
    <label for="latitude">Latitude: </label>
    <input type="text" name="latitude" id="latitude" value="{{graffiti.latitude}}">    
    <br>
    <label for="longitude">Longitude: </label>
    <input type="text" name="longitude" id="longitude" value="{{graffiti.latitude}}">
    <br>
    <div id="map" style="width: 60vw; height: 60vh"></div>
    <br>
    <button type="submit" id="upload-btn">update image</button>
</form>

